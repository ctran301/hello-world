CREATE TABLE friends (
	id INTEGER,
	name TEXT,
	birthday DATE
);

 INSERT INTO friends (id, name, birthday)
 VALUES (1, 'Jane Doe', 1990-05-30 );
 
 INSERT INTO friends (id, name, birthday)
	VALUES (2, 'Tommy Taurasi', 1992-07-02 );
  	
 INSERT INTO friends (id, name, birthday )
  VALUES (3, 'Ryan Vondenhuevel', 1992-05-15);
  
 UPDATE friends
 SET name = 'Jane Smith'
 WHERE id = 1;
 
 ALTER TABLE friends ADD COLUMN email TEXT;
 	UPDATE friends
  SET email = 'jane@codeacademy.com'
  WHERE id = 1;
  
